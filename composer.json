{
    "name": "avaibooksports/omnipay-paypal-standard",
    "type": "library",
    "description": "PayPal driver for the Omnipay payment processing library",
    "keywords": [
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "purchase"
    ],
    "homepage": "https://github.com/AvaiBookSports/omnipay-paypal-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Alvaro Codina",
            "email": "alvaro.codina@avaibooksports.com"
        }
    ],
    "autoload": {
        "psr-4": { "Omnipay\\PaypalStandard\\" : "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Omnipay\\PaypalStandard\\" : "tests/" }
    },
    "require": {
        "php": "^7.4|^8",
        "omnipay/common": "~3.0"
    },
    "require-dev": {
        "omnipay/tests": "^4.1",
        "php-http/mock-client": "^1.6",
        "php-http/guzzle7-adapter": "^1",
        "squizlabs/php_codesniffer": "^3.8.1",
        "http-interop/http-factory-guzzle": "^1.1"
    },
    "suggest": {
        "ext-openssl": "Required for hashing functions to check message signatures"
    },
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
